@model Expenditure.Web.Data.Entities.ExpenditureEntity

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Expenditure</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ExpenseType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenseType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ExpenditureDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenditureDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ExpenseValue)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpenseValue)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhotoPath)
        <dd>
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Url.Content(Model.PhotoPath)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
            }
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
